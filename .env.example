# ==============================================
# NETWORK CONFIGURATION
# ==============================================

# Sepolia Testnet RPC URL
# Get from: https://infura.io or https://alchemy.com
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Alternative RPC Providers:
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# SEPOLIA_RPC_URL=https://rpc.sepolia.org
# SEPOLIA_RPC_URL=https://ethereum-sepolia.publicnode.com

# Mainnet RPC URL (for production deployment)
# MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# ==============================================
# WALLET CONFIGURATION
# ==============================================

# Private Key (DO NOT commit your actual private key!)
# Get from MetaMask: Account Details > Export Private Key
# WARNING: Keep this secret! Never commit to version control!
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Deployer Address (optional - for verification)
DEPLOYER_ADDRESS=

# ==============================================
# CONTRACT VERIFICATION
# ==============================================

# Etherscan API Key for contract verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ==============================================
# GAS REPORTING & OPTIMIZATION
# ==============================================

# Enable gas reporting in tests
REPORT_GAS=false

# CoinMarketCap API Key for USD gas price conversion
# Get from: https://pro.coinmarketcap.com/account
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_for_gas_price_in_usd

# Gas Price Settings (in gwei)
GAS_PRICE=
MAX_FEE_PER_GAS=
MAX_PRIORITY_FEE_PER_GAS=

# ==============================================
# DEPLOYED CONTRACT ADDRESSES
# ==============================================

# Main contract address (after deployment)
CONTRACT_ADDRESS=

# Additional contract addresses (if any)
# PROXY_ADDRESS=
# IMPLEMENTATION_ADDRESS=

# ==============================================
# ACCESS CONTROL & SECURITY
# ==============================================

# Platform Owner Address
OWNER_ADDRESS=

# Pauser Role Address (for emergency pause functionality)
PAUSER_ADDRESS=

# Admin Addresses (comma-separated for multiple admins)
ADMIN_ADDRESSES=

# Operator Addresses (for platform operations)
OPERATOR_ADDRESSES=

# Emergency Contact
EMERGENCY_CONTACT=

# ==============================================
# PLATFORM CONFIGURATION
# ==============================================

# Minimum Quality Score (0-100)
MIN_QUALITY_SCORE=0

# Maximum Quality Score (0-100)
MAX_QUALITY_SCORE=100

# Platform Fee Percentage (e.g., 1 for 1%)
PLATFORM_FEE_PERCENTAGE=1

# Maximum Data Size in MB
MAX_DATA_SIZE_MB=10

# Default Dataset Visibility
DEFAULT_PUBLIC_DATASETS=true

# ==============================================
# IPFS CONFIGURATION (optional)
# ==============================================

# IPFS API URL
IPFS_API_URL=https://ipfs.infura.io:5001

# IPFS Project Credentials
IPFS_PROJECT_ID=your_ipfs_project_id
IPFS_PROJECT_SECRET=your_ipfs_project_secret

# Pinata (alternative IPFS provider)
# PINATA_API_KEY=
# PINATA_SECRET_KEY=

# ==============================================
# SCRIPT CONFIGURATION
# ==============================================

# Interact Script Options
ACTION=1
DATA_VALUE=12345
QUALITY_SCORE=85
METADATA_HASH=QmExampleHash123456789
IS_PUBLIC=true
RESEARCH_TOPIC=Medical Research Study
BUDGET=50000
DEADLINE=
DATASET_ID=1
REQUEST_ID=1
ACCESSOR_ADDRESS=
CONTRIBUTOR_ADDRESS=
NEW_SCORE=90
REWARD_AMOUNT=1000

# ==============================================
# TESTING CONFIGURATION
# ==============================================

# Test Network
TEST_NETWORK=hardhat

# Enable verbose test output
VERBOSE_TESTS=false

# Test timeout (milliseconds)
TEST_TIMEOUT=40000

# ==============================================
# CI/CD CONFIGURATION
# ==============================================

# Enable CI mode
CI=false

# Coverage threshold (percentage)
COVERAGE_THRESHOLD=80

# ==============================================
# MONITORING & ANALYTICS (optional)
# ==============================================

# Sentry DSN for error tracking
# SENTRY_DSN=

# Google Analytics ID
# GA_TRACKING_ID=

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable debug mode
DEBUG_MODE=false

# Enable maintenance mode
MAINTENANCE_MODE=false

# ==============================================
# RATE LIMITING (optional)
# ==============================================

# Maximum requests per hour
MAX_REQUESTS_PER_HOUR=100

# Request timeout (seconds)
REQUEST_TIMEOUT=30
